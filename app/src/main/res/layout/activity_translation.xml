<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnTranExplode1"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:text="tran(Java)"
        android:background="@drawable/bg_exit_button"/>
    <Button
        android:id="@+id/btnTranExplode2"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="tran(XML)"
        android:background="@drawable/bg_exit_button"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnTranFade1"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:text="FADE(Java)"
        android:background="@drawable/bg_exit_button"/>
    <Button
        android:id="@+id/btnTranFade2"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="FADE(XML)"
        android:background="@drawable/bg_exit_button"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnTranSlide1"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:text="SLIDE(Java)"
        android:background="@drawable/bg_exit_button"/>
    <Button
        android:id="@+id/btnTranSlide2"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="SLIDE(XML)"
        android:background="@drawable/bg_exit_button"
        android:textSize="18sp"/>

</LinearLayout>